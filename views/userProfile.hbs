<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <img src="{{targetUser.profilePicture}}" alt="Profile Picture" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    <h4>{{targetUser.firstname}} {{targetUser.lastname}}</h4>
                    <p class="text-muted">{{targetUser.email}}</p>
                    <span class="badge bg-primary">{{targetUser.role}}</span>
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Reservations</h5>
                </div>
                <div class="card-body">
                    {{#if targetUser.reservations.length}}
                        <div class="list-group">
                            {{#each targetUser.reservations}}
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">{{room}} - Seat {{seat}}</h6>
                                            <p class="mb-1">{{day}} | {{startTime}} - {{endTime}}</p>
                                            {{#if name}}
                                                <small class="text-muted">Reserved as: {{name}}</small>
                                            {{/if}}
                                        </div>
                                        <span class="badge bg-success">Active</span>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    {{else}}
                        <p class="text-muted">No reservations found.</p>
                    {{/if}}
                </div>
            </div>
            
            {{#if currentUser}}
                <div class="mt-3">
                    <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
                    {{#if currentUser.role}}
                        <a href="/people" class="btn btn-info">View All Users</a>
                    {{/if}}
                </div>
            {{/if}}
        </div>
    </div>
</div> 